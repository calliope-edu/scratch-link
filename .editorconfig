root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
trim_trailing_whitespace = true

[*.{cs,csproj,sln,xaml}]
charset = utf-8-bom
end_of_line = crlf

[*.{html,md}]
indent_style = space

[*.sh]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2
indent_style = space
